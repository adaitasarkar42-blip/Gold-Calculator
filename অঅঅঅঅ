<body>
    <header>
        <h1>স্বাগতম আমাদের নার্সারিতে!</h1>
        <p>গাছ, গাছালি, এবং ফুলের গাছ অনলাইনে অর্ডার করুন।</p>
    </header>
    
    <div class="container">
        <h2>প্রোডাক্টস</h2>
        <div id="products">
            <!-- স্যাম্পল প্রোডাক্টস -->
            <div class="product">
                <img src="https://via.placeholder.com/300x200?text=Rose+Plant" alt="গোলাপ গাছ">
                <h3>গোলাপ গাছ</h3>
                <p>দাম: ৫০০ টাকা</p>
                <button onclick="addToCart('গোলাপ গাছ', 500)">কার্টে যোগ করুন</button>
            </div>
            <div class="product">
                <img src="https://via.placeholder.com/300x200?text=Mango+Tree" alt="আম গাছ">
                <h3>আম গাছ</h3>
                <p>দাম: ১০০০ টাকা</p>
                <button onclick="addToCart('আম গাছ', 1000)">কার্টে যোগ করুন</button>
            </div>
            <div class="product">
                <img src="https://via.placeholder.com/300x200?text=Tulip+Plant" alt="টিউলিপ গাছ">
                <h3>টিউলিপ গাছ</h3>
                <p>দাম: ৩০০ টাকা</p>
                <button onclick="addToCart('টিউলিপ গাছ', 300)">কার্টে যোগ করুন</button>
            </div>
            <!-- আরও প্রোডাক্ট যোগ করুন -->
        </div>
        
        <div id="cart">
            <h2>আপনার কার্ট</h2>
            <ul id="cartItems"></ul>
            <p>মোট: <span id="total">0</span> টাকা</p>
            <button onclick="showCheckout()">চেকআউট</button>
        </div>
        
        <div id="checkout">
            <h2>চেকআউট</h2>
            <form id="orderForm">
                <input type="text" placeholder="আপনার নাম" required>
                <input type="text" placeholder="আপনার ঠিকানা" required>
                <input type="tel" placeholder="ফোন নম্বর" required>
                <select id="paymentMethod">
                    <option value="cod">ক্যাশ অন ডেলিভারি</option>
                    <option value="online">অনলাইন পেমেন্ট</option>
                </select>
                <button type="submit">অর্ডার কনফার্ম করুন</button>
            </form>
        </div>
    </div>

    <script>
        let cart = [];
        let total = 0;

        function addToCart(name, price) {
            cart.push({ name, price });
            total += price;
            updateCart();
        }

        function updateCart() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            cart.forEach(item => {
                const li = document.createElement('li');
                li.textContent = `${item.name} - ${item.price} টাকা`;
                cartItems.appendChild(li);
            });
            document.getElementById('total').textContent = total;
        }

        function showCheckout() {
            document.getElementById('checkout').style.display = 'block';
        }

        document.getElementById('orderForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const payment = document.getElementById('paymentMethod').value;
            if (payment === 'online') {
                alert('অনলাইন পেমেন্টের জন্য Stripe/PayPal ইন্টিগ্রেট করুন। এখন সিমুলেশন: অর্ডার সাকসেসফুল!');
                // এখানে রিয়েল পেমেন্ট API যোগ করুন
            } else {
                alert('ক্যাশ অন ডেলিভারি অর্ডার কনফার্ম! আমরা যোগাযোগ করবো।');
            }
            // রিয়েল অর্ডার প্রসেসিংয়ের জন্য ব্যাকএন্ড যোগ করুন
        });
    </script>
</body>
</html>
